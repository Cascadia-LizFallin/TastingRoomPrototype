<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorChampagne"
    >
    <!--   app:layout_behavior="@string/appbar_scrolling_view_behavior"
       tools:context="com.example.liz.tastingroomprototype.TastingRoom"
       tools:showIn="@layout/activity_tasting_room">
   -->

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"
        android:id="@+id/linearLayout"
        android:orientation="horizontal" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true" />
    <!--        android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/linearLayout"
    -->


    <ImageView
        android:id="@+id/imgLogoSmall"
        android:src="@drawable/barrel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Observations"
        android:id="@+id/lblObservations"
        android:textColor="@color/colorTextBrown"
        android:layout_marginBottom="71dp"
        android:layout_alignBottom="@+id/imgLogo"
        android:layout_centerHorizontal="true" />


    <!--        <RelativeLayout
                   android:id="@+id/landinglistitems"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignBottom="@+id/logoimage"
                   android:layout_alignLeft="@+id/logoimage"
                   android:layout_alignRight="@+id/logoimage"
                   android:paddingBottom="0dp" >
       -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appearance"
        android:id="@+id/btnAppearance"
        android:layout_below="@+id/imgLogoSmall"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnExport" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nose"
        android:id="@+id/btnNose"
        android:layout_below="@+id/btnAppearance"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnAppearance" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palate"
        android:id="@+id/btnPalate"
        android:layout_below="@+id/btnNose"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnNose" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conclusions"
        android:id="@+id/btnConclusions"
        android:layout_below="@+id/btnPalate"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnPalate" />







    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Additional Notes:"
        android:id="@+id/lblObsNotes"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/btnConclusions"
        android:layout_toEndOf="@+id/linearLayout"
        android:layout_marginTop="28dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextObsNotes"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/lblObsNotes"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/btnExport" />





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/btnBack"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnAppearance" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/btnHome"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnBack" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnReset"
        android:text="Reset"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnHome" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export"
        android:id="@+id/btnExport"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />



    <!--       </RelativeLayout>
   -->
</RelativeLayout>
