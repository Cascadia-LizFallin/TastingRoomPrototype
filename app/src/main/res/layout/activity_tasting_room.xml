<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorChampagne"
    >
    <!--   app:layout_behavior="@string/appbar_scrolling_view_behavior"
       tools:context="com.example.liz.tastingroomprototype.TastingRoom"
       tools:showIn="@layout/activity_tasting_room">
   -->

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"
        android:id="@+id/linearLayout"
        android:orientation="horizontal" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true" />
    <!--        android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/linearLayout"
    -->


    <ImageView
        android:id="@+id/imgLogo"
        android:src="@drawable/barrelscellarnarrow"
        android:layout_width="620dp"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tasting Room"
        android:id="@+id/lblTastingRoom"
        android:paddingTop="15dp"
        android:layout_below="@+id/linearLayout"
        android:layout_toEndOf="@+id/lblWineName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Winery:"
        android:id="@+id/lblWinery"
        android:paddingTop="0dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/imgLogo"
        android:layout_toEndOf="@+id/linearLayout" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextWinery"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/lblWinery"
        android:layout_alignRight="@+id/imgLogo"
        android:layout_toEndOf="@+id/lblWinery" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wine Name:"
        android:id="@+id/lblWineName"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/lblWinery"
        android:layout_toEndOf="@+id/linearLayout" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextWineName"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/lblWineName"
        android:layout_alignRight="@+id/imgLogo"
        android:layout_toEndOf="@+id/lblWineName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Year:"
        android:id="@+id/lblYear"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/lblWineName"
        android:layout_toEndOf="@+id/linearLayout" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextYear"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/lblYear"
        android:layout_alignRight="@+id/imgLogo"
        android:layout_toEndOf="@+id/lblYear" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Main Grape Varietal:"
        android:id="@+id/lblVarietal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/lblYear"
        android:layout_toEndOf="@+id/linearLayout" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextVarietal"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/lblVarietal"
        android:layout_alignRight="@+id/imgLogo"
        android:layout_toEndOf="@+id/lblVarietal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Additional Notes:"
        android:id="@+id/lblLandingNotes"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/lblVarietal"
        android:layout_toEndOf="@+id/linearLayout" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLandingNotes"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/lblLandingNotes"
        android:layout_alignRight="@+id/imgLogo"
        android:layout_alignParentStart="true"
        android:layout_toEndOf="@+id/lblLandingNotes" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/btnReset"
        android:layout_toLeftOf="@+id/btnExport"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export"
        android:id="@+id/btnExport"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Observations"
        android:id="@+id/btnObservations"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnExport" />


    <!--       </RelativeLayout>
   -->
</RelativeLayout>
